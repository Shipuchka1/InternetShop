@using InternetShop.Models
@model List<Order>
@{
    ViewBag.Title = "OrdersStory";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<h2>OrdersStory</h2>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Дата и время</th>
        <th>Сумма</th>
        <th></th>
    </tr>
    @foreach (Order item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.OrderDate</td>
        <td>@item.Sum</td>
        <td>@Html.ActionLink("Подробнее","DetailsOrder","Good",new {id = item.Id },new { @class="btn btn-danger"})</td>
    </tr>
    }
</table>

