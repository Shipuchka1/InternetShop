@using InternetShop.Models
@model Order
@{
    ViewBag.Title = "DetailsOrder";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<h2>DetailsOrder</h2>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Изображение</th>
        <th>Наименование</th>
        <th>Описание</th>
        <th>Цена</th>
    </tr>
    @foreach (OrderEntry item in Model.OrderEntries)
    {
        <tr>
            <td>@item.Good.Id</td>
            <td><img src="@item.Good.UrlImage" /></td>
            <td>@item.Good.Name</td>
            <td>@item.Good.Description</td>
            <td>@item.EndPrice</td>
            <td>@item.Quantity</td>
            <td>@(item.Quantity * item.EndPrice)</td>
        </tr>
    }

</table>

<div>Дата заказа - @Model.OrderDate</div>
<div>Сумма заказа с учетом промокода - @Model.Sum</div>

